# Deribit API Configuration - Mainnet
DERIBIT_CLIENT_ID=your_mainnet_client_id_here
# Option 1: Use RSA key file (recommended for mainnet)
DERIBIT_PRIVATE_KEY_PATH=key/private.pem
# Option 2: Use direct secret key string (leave DERIBIT_PRIVATE_KEY_PATH empty if using this)
# DERIBIT_PRIVATE_KEY=your_mainnet_secret_key_here

# Deribit API Configuration - Testnet
DERIBIT_CLIENT_ID_TESTNET=your_testnet_client_id_here
# Option 1: Use RSA key file
# DERIBIT_PRIVATE_KEY_PATH_TESTNET=key/private_testnet.pem
# Option 2: Use direct secret key string (recommended for testnet)
DERIBIT_PRIVATE_KEY_TESTNET=your_testnet_secret_key_here

# Deribit API Settings
DERIBIT_TESTNET=false
DERIBIT_RATE_LIMIT=20
DERIBIT_TIMEOUT=30

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=btc_options_db
DB_PORT=3306

# Telegram Configuration (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Trading Configuration
TRADING_NEAR_EXPIRATION=
TRADING_FAR_EXPIRATION=
TRADING_SPREAD_WAY=SHORT
TRADING_EXECUTION_ENABLED=false
TRADING_POSITION_SIZE=0.1
TRADING_MAX_POSITIONS=4

# Risk Management Configuration
RISK_MAX_POSITION_SIZE=0.1
RISK_MAX_PORTFOLIO_RISK=0.2
RISK_MARGIN_BUFFER=1.2
RISK_MAX_DAILY_LOSS=0.1
RISK_STOP_LOSS_PERCENTAGE=0.05

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
